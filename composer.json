{
    "name": "siushin/laravel-api",
    "description": "LaravelAPI 基于 Laravel 的API框架，提供常用工具类、助手函数等服务",
    "type": "project",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-fileinfo": "*",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1",
        "nwidart/laravel-modules": "^12.0",
        "siushin/laravel-tool": "^1.0",
        "zoujingli/ip2region": "^2.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel-lang/lang": "^15.26",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Modules\\Base\\": "Modules/Base/app/",
            "Modules\\Base\\Database\\Factories\\": "Modules/Base/database/factories/",
            "Modules\\Base\\Database\\Seeders\\": "Modules/Base/database/seeders/",
            "Modules\\Sms\\": "Modules/Sms/app/",
            "Modules\\Sms\\Database\\Factories\\": "Modules/Sms/database/factories/",
            "Modules\\Sms\\Database\\Seeders\\": "Modules/Sms/database/seeders/"
        },
        "files": [
            "Modules/Base/app/Funcs/FuncLog.php",
            "Modules/Base/app/Funcs/FuncHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "@php -r \"if (!file_exists('vendor/just-installed.flag')) { touch('vendor/just-installed.flag'); system('php artisan migrate:fresh --seed --ansi'); }\""
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php -r \"if (file_exists('vendor/just-installed.flag')) { unlink('vendor/just-installed.flag'); }\"",
            "@php artisan laravel-tool:publish",
            "Siushin\\Util\\Installer::postInstall"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate:fresh --seed --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "extra": {
        "package-name": "siushin/laravel-api",
        "laravel": {
            "dont-discover": []
        },
        "providers": [
            "Siushin\\LaravelTool\\ServiceProvider"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
